<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat_thin"
        android:textSize="28sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/title_movies"/>

    <View
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/light_grey"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"/>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:weightSum="2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_top_rated"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:onClick="clickMovies"
            app:cardBackgroundColor="@color/font_dark"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"
            android:layout_weight="1"
            app:cardElevation="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_black"
                    android:text="@string/top_rated"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textColor="#ffffff"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_popular"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:onClick="clickMovies"
            app:cardBackgroundColor="@color/light_grey"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"
            android:layout_weight="1"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_black"
                    android:text="@string/popular"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textColor="@color/grey"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movies_popular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttons_container"
        android:layout_margin="30dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_below="@id/title"
        android:weightSum="2">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_movies_top_rated"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/pb_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


</RelativeLayout>